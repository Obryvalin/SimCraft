         })

         takeForm = document.querySelector("#takeForm");
         takeForm.addEventListener("submit",(e)=>{
             e.preventDefault();
             fetch("/inventoryTake?product="+takeForm.item.value).then((res)=>{

             })
         })
    </script>
</body>
</html>